<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FillTheForm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill the form"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/nunito_extrabold"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="6"
        android:baselineAligned="false"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood group"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/txt_bloodGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="....."
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_extrabold"
                    />

                <TextView
                    android:id="@+id/txt_selectBloodGrp"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="select"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@drawable/roundbackground_red_allcorners"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/txt_countryname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="....."
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_extrabold"
                    />

                <TextView
                    android:id="@+id/txt_selectCountry"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="select"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@drawable/roundbackground_red_allcorners"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="6"
        android:baselineAligned="false"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/txt_statename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="....."
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_extrabold"
                    />

                <TextView
                    android:id="@+id/txt_selectState"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="select"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@drawable/roundbackground_red_allcorners"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/txt_cityname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="....."
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_extrabold"
                    />

                <TextView
                    android:id="@+id/txt_selectCity"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="select"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@drawable/roundbackground_red_allcorners"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_showdonorslist"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Now show data"
        android:background="@drawable/roundbackground_red_allcorners"
        android:layout_margin="45dp"
        />

</LinearLayout>